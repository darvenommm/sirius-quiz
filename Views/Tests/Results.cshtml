@model IEnumerable<Quiz.Models.TestResult>

@{
    ViewData["Title"] = "Test Results";
}

<h2>Your Test Results</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Test Title</th>
                <th>Correct Answers</th>
                <th>Total Questions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model)
            {
                <tr>
                    <td>@result.Test.Title</td>
                    <td>@result.CorrectAnswersCount</td>
                    <td>@result.Test.Questions.Count</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found. You haven't taken any tests yet.</p>
}